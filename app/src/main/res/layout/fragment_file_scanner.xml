<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.macys.com.filescanner.FileScannerFragment">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/average_size_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/average_file_size"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:visibility="gone"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/average_size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="20dp"
        android:layout_below="@id/average_size_header" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/average_size_text"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_media_play" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        android:background="@android:color/holo_blue_light"
        android:src="@android:drawable/ic_menu_share" />

</RelativeLayout>
